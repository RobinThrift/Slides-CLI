<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{config.title}}</title>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,300italic,700|Sanchez" rel="stylesheet">
    <link rel="stylesheet" href="styles/main.css">
</head>
<body>
    
    <div class="reveal">
        <div class="slides">
            {{#each slides}}
                {{{ this }}}
            {{/each}}     
        </div>        
    </div>

    <script src="scripts/reveal.min.js"></script>
    <script>
        Reveal.initialize({              
            controls: true,              
            progress: true,              
            slideNumber: true,           
            history: true,               
            keyboard: true,              
            overview: true,              
            transition: 'linear',        
            backgroundTransition: 'slide'
        });                              
    </script>
</body>
</html>
